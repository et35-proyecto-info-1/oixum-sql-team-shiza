html
    head

    body
      h1 Oixum SQL

      form(method="post" action="/")
        textarea(name="query" rows="4" cols="30")
        input(type="submit")

      if error
        h3 Error

          code error


      if resultados
        table
          thead
            each columnas in columnas.lenght
              th= this.name

          tbody
            tr
              each columnas in columnas
                each resultados in resultados
                  td= this.name
